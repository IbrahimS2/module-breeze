                    <dataScope>breeze_enabled</dataScope>
                </settings>
                <formElements>
                    <select>
                        <settings>
                            <options class="Swissup\Breeze\Model\Config\Source\YesNoTheme"/>
                        </settings>
                    </select>
                </formElements>
